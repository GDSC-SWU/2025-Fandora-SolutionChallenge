<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_home_fan_gift"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginHorizontal="7dp"
        android:src="@color/gray_50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/AppRoundedImage6" />

    <TextView
        android:id="@+id/tv_home_fan_gift_content"
        style="@style/Body3.Gray750"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="I’m so happy to receive this album! ThanI’m so happy to receive this album! Than"
        app:layout_constraintEnd_toEndOf="@id/iv_home_fan_gift"
        app:layout_constraintStart_toStartOf="@id/iv_home_fan_gift"
        app:layout_constraintTop_toBottomOf="@id/iv_home_fan_gift" />
</androidx.constraintlayout.widget.ConstraintLayout>