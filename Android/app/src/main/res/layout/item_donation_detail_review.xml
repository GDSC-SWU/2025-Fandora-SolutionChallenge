<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_donation_detail_review"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/gray_50"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/AppRoundedImage10" />

    <TextView
        android:id="@+id/tv_donation_detail_review_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Thanks to this, I waㆍㆍㆍ"
        app:layout_constraintEnd_toEndOf="@id/iv_donation_detail_review"
        app:layout_constraintStart_toStartOf="@id/iv_donation_detail_review"
        app:layout_constraintTop_toBottomOf="@id/iv_donation_detail_review" />
</androidx.constraintlayout.widget.ConstraintLayout>