<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_ongoing"
        android:layout_width="175dp"
        android:layout_height="217dp"
        android:layout_marginHorizontal="7dp"
        android:background="@color/gray_50"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/AppRoundedImage8" />

    <TextView
        android:id="@+id/tv_ongoing_company_name"
        style="@style/Body2.Gray750"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Idol Dream Center"
        app:layout_constraintEnd_toEndOf="@id/iv_ongoing"
        app:layout_constraintStart_toStartOf="@id/iv_ongoing"
        app:layout_constraintTop_toBottomOf="@id/iv_ongoing" />

    <TextView
        android:id="@+id/tv_ongoing_date"
        style="@style/Body3.Gray750"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="2025.4.5"
        app:layout_constraintEnd_toEndOf="@id/tv_ongoing_company_name"
        app:layout_constraintStart_toStartOf="@id/tv_ongoing_company_name"
        app:layout_constraintTop_toBottomOf="@id/tv_ongoing_company_name" />
</androidx.constraintlayout.widget.ConstraintLayout>